
@{
    ViewData["Title"] = "Busca por Funcionario";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal" asp-action="FuncSearch">
            <fieldset>
                <legend>Buscar</legend>
                <div class="form-group">
                    <label for="minDate" class="col-lg-2 control-label">Do dia:</label>
                    <div class="col-lg-10">
                        <input type="date" name="minDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="maxDate" class="col-lg-2 control-label">Até:</label>
                    <div class="col-lg-10">
                        <input type="date" name="maxDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10">
                        <button type="submit" class="btn btn-primary">Procurar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>